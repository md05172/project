<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="book">

	<select id="list" resultType="Book">
		SELECT * FROM book	
	</select>
	
	<insert id="add">
		INSERT INTO book
		VALUES (SEQ_BOOK.nextval, #{name}, #{publisher}, #{price}, #{path}, #{info}, #{writer}, #{writerinfo})
	</insert>
	
	<delete id="delete">
		DELETE FROM book
		WHERE name = #{name}
	</delete>
	
	<select id="item" resultType="Book">
		SELECT * FROM book
		WHERE id = #{id}	
	</select>
	
	<update id="update">
		UPDATE book
		SET name = #{name}, publisher = #{publisher}, price = #{price}
		WHERE id = #{id}
	</update>
	
</mapper>