<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="book">

	<sql id="search">
		SELECT * FROM book
		ORDER BY id		
	</sql>
	
	<select id="total" resultType="Integer">
		SELECT COUNT(*) FROM (<include refid="search"></include>)
	</select>

	<select id="list" resultType="Book">
		SELECT * FROM
	    	(SELECT sub.*, ROWNUM rnum FROM
	        	(<include refid="search"></include>) sub)
		<if test="perPage != 0">
			WHERE rnum BETWEEN ((#{page} - 1) * #{perPage}) + 1 AND (#{page} * #{perPage})
		</if>	
	</select>
	
	<insert id="add">
		INSERT INTO book
		VALUES (SEQ_BOOK.nextval, #{name}, #{publisher}, #{price}, #{path}, #{info}, #{writer}, #{writerInfo}, #{category})
	</insert>
	
	<delete id="delete">
		DELETE FROM book
		WHERE name = #{name}
	</delete>
	
	<select id="item" resultType="Book">
		SELECT * FROM book
		WHERE id = #{id}	
	</select>
	
	<update id="update">
		UPDATE book
		SET name = #{name}, publisher = #{publisher}, price = #{price}
		WHERE id = #{id}
	</update>
	
</mapper>