<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="book">

	<select id="list" resultType="Book">
		SELECT * FROM book	
	</select>
	
	<insert id="add">
		INSERT INTO book
		VALUES (SEQ_BOOK.nextval, #{name}, #{publisher}, #{price}, #{path}, #{info}, #{writer}, #{writerinfo})
	</insert>
	
	<delete id="delete">
		DELETE FROM book
		WHERE bookid = #{bookid}
	</delete>
	
	<select id="item" resultType="Book">
		SELECT * FROM book
		WHERE bookid = #{bookid}	
	</select>
	
	<update id="update">
		UPDATE book
		SET bookname = #{bookname}, publisher = #{publisher}, price = #{price}
		WHERE bookid = #{bookid}
	</update>
	
</mapper>